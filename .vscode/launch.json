    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Launch localhost with sourcemaps",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200/",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}",
            "trace": "verbose"  
        },
        {
            "name": "DashApp",
            "type": "chrome",
            "request": "launch",
            // "port": 4200,
            "url": "http://localhost:4200/",
            "webRoot": "${workspaceRoot}",
            "sourceMaps": false,
            "trace": "verbose"        
      }
    ]
}